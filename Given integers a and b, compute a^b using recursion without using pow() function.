#include <stdio.h>

// Recursive function to calculate a^b
long long power(int a, int b) {
    // Base case
    if (b == 0)
        return 1;

    // Recursive case
    return a * power(a, b - 1);
}

int main() {
    int a, b;

    printf("Enter base (a): ");
    scanf("%d", &a);

    printf("Enter exponent (b): ");
    scanf("%d", &b);

    if (b < 0) {
        printf("Negative exponents not supported in this program.\n");
    } else {
        printf("%d^%d = %lld\n", a, b, power(a, b));
    }

    return 0;
}
